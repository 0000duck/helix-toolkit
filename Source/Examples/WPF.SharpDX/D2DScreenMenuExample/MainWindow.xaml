<Window x:Class="D2DScreenMenuExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:D2DScreenMenuExample"
        xmlns:hx="http://helix-toolkit.org/wpf/SharpDX"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <hx:Viewport3DX EnableSwapChainRendering="True" Camera="{Binding Camera}" EffectsManager="{Binding EffectsManager}">
            <hx:Viewport3DX.D2DItems>
                <hx:GroupElement2D>
                    <hx:D2DTextModel/>
                </hx:GroupElement2D>
            </hx:Viewport3DX.D2DItems>
        </hx:Viewport3DX>
    </Grid>
</Window>
