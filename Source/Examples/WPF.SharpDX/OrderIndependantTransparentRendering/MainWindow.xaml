<Window x:Class="OrderIndependantTransparentRendering.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hx="http://helix-toolkit.org/wpf/SharpDX"
        xmlns:local="clr-namespace:OrderIndependantTransparentRendering"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200">
    <Grid>
        <Grid.DataContext>
            <local:MainViewModel/>
        </Grid.DataContext>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <hx:Viewport3DX
            x:Name="view"
            Grid.Row="1"
            Camera="{Binding Camera}"
            CameraMode="Inspect"
            CameraRotationMode="Turnball"
            BackgroundColor="#303030"
            ShowCoordinateSystem="True"
            CoordinateSystemLabelForeground="White"
            EffectsManager="{Binding EffectsManager}"
            MSAA="Two">
            <hx:Viewport3DX.InputBindings>
                <KeyBinding Key="B" Command="hx:ViewportCommands.BackView" />
                <KeyBinding Key="F" Command="hx:ViewportCommands.FrontView" />
                <KeyBinding Key="U" Command="hx:ViewportCommands.TopView" />
                <KeyBinding Key="D" Command="hx:ViewportCommands.BottomView" />
                <KeyBinding Key="L" Command="hx:ViewportCommands.LeftView" />
                <KeyBinding Key="R" Command="hx:ViewportCommands.RightView" />
                <KeyBinding Command="hx:ViewportCommands.ZoomExtents" Gesture="Control+E" />
                <MouseBinding Command="hx:ViewportCommands.Rotate" Gesture="RightClick" />
                <MouseBinding Command="hx:ViewportCommands.Zoom" Gesture="MiddleClick" />
                <MouseBinding Command="hx:ViewportCommands.Pan" Gesture="LeftClick" />
            </hx:Viewport3DX.InputBindings>
            <hx:AmbientLight3D />
            <hx:DirectionalLight3D Direction="{Binding Camera.LookDirection}" />
            <hx:LineGeometryModel3D Geometry="{Binding GridModel}" Color="#4F4E4E" Transform="{Binding GridTransform}" Thickness="0.5"/>
            <hx:GroupModel3D x:Name="group" ItemsSource="{Binding ModelGeometry}"/>
        </hx:Viewport3DX>
        <StackPanel
            Grid.Row="1" 
            Orientation="Vertical"
            HorizontalAlignment="Right"
            VerticalAlignment="Top">
            <Button              
                Command="{Binding ResetCameraCommand}">
                Reset Camera
            </Button>
            <CheckBox IsChecked="{Binding ShowWireframe}">Show Wireframe</CheckBox>
            <CheckBox IsChecked="{Binding ElementName=view, Path=EnableOITRendering}">Enable OIT</CheckBox>
        </StackPanel>
    </Grid>
</Window>
