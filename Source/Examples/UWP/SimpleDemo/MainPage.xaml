<Page
    x:Class="SimpleDemoW10.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SimpleDemoW10"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helix="using:HelixToolkit.UWP"
    xmlns:helixModel="using:HelixToolkit.UWP.CommonDX"
    mc:Ignorable="d">

    <Page.DataContext>
        <local:MainPageViewModel/>
    </Page.DataContext>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <helix:Viewport3DX Grid.Row="0" Grid.RowSpan="2" EffectsManager="{Binding EffectsManager}" Camera="{Binding Camera}" Background="Black" BackgroundColor="Black">
            <helix:DirectionalLight3D Direction="{Binding Camera.LookDirection}" Color="White"/>
            <helix:MeshGeometryModel3D Geometry="{Binding Geometry}" Material="{Binding Material}" Transform="{Binding Transform}"/>
            <helix:LineGeometryModel3D Geometry="{Binding LineGeometry}" Color="Yellow"/>
            <helix:PointGeometryModel3D Geometry="{Binding PointGeometry}" Color="Blue"/>
        </helix:Viewport3DX>
        <TextBlock Text="HelixToolkit + SharpDX in Windows 10" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="64" FontStretch="Condensed" Foreground="Red"/>        
    </Grid>
</Page>
